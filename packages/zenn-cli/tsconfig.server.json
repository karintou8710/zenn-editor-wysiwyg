{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "skipLibCheck": true,

    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": false,
    "moduleDetection": "force",
    "noEmit": true,

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/server"],
  "exclude": ["**/__tests__"]
}
