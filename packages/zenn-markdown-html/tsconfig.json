{
  "compilerOptions": {
    "strict": true,

    "target": "ES2020",
    "declaration": true,
    "noEmit": true,
    "skipLibCheck": true,

    "module": "es2020",
    "moduleResolution": "bundler",
    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "allowArbitraryExtensions": true,
    "isolatedModules": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/types/**/*.d.ts"]
}
